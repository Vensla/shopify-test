function addToCart(id, quantity) {
    jQuery.post('/cart/add.js', {
      items: [
        {
          id: id,
          quantity: quantity
        }
      ]
    }, (data) => {
       console.log(data);
    })
}

$('.cart-button').click(function(e) {
    var id = $(this).data('id')
    var quantity = $(this).data('quantity')
    addToCart(id, quantity);
})

